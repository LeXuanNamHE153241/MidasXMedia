<style>
	table td {
		padding: 5px 10px;
		font-weight:300;
	}

	input, textarea, select {
		border: solid 1px #ddd;
		padding: 5px 20px;
		width: 100%;
	}

	select {
		width: 180px;
	}

	input[type="submit"] {
		width: auto;
		background: black;
		color: #fff;
	}
</style>
<script>
	function validateDates() {
		// Lấy giá trị của ngày bắt đầu và ngày kết thúc
		var startDateValue = document.getElementById('startDate').value;
		var endDateValue = document.getElementById('endDate').value;

		// Kiểm tra xem ngày bắt đầu và ngày kết thúc có trống không
		if (!startDateValue || !endDateValue) {
			alert('Vui lòng chọn cả ngày bắt đầu và ngày kết thúc.');
			return;
		}

		var startDate = new Date(startDateValue);
		var endDate = new Date(endDateValue);

		// Kiểm tra xem ngày kết thúc có sau ngày bắt đầu không
		if (endDate <= startDate) {
			alert('Ngày kết thúc phải sau ngày bắt đầu. Vui lòng chọn lại.');
			// Xóa giá trị của ngày kết thúc để người dùng chọn lại
			document.getElementById('endDate').value = '';
		} else {
			alert('Ngày hợp lệ!');
			// Thêm các xử lý khác nếu cần
		}
	}
</script>
<section id="featured-cars" class="featured-cars">
	<div class="container">
		<div class="section-header">

			<h2>Form Booking:</h2>
		</div><!--/.section-header-->
		<div class="featured-cars-content">
			<div class="row" style="text-align:center;margin-left:10%">
				<form method="post" action="BookingAccess?id=@ViewBag.Vehicle.VehicleId&price=@ViewBag.Vehicle.Price">
					<table>
						<tr>
							<td>Tên của bạn</td>
							<td>
								<input type="text" value="@ViewBag.FullName" disabled name="name" />
							</td>
						</tr>
						<tr>
							<td>Tên Xe:</td>
							<td>
								
								<input type="text" value="@ViewBag.Vehicle.Model" disabled name="model" />
							</td>
						</tr>
						<tr>
							<td>Hình Ảnh:</td>
							<td>
								<img style="height:420px;width420px;" src="~/assets/images/featured-cars/@ViewBag.Vehicle.Images" alt="cars">
								
							</td>
						</tr>
						<tr>
							<td>Thông Tin Xe:</td>
							<td style="text-align:left">
								<h4>Tên: @ViewBag.Vehicle.Model</h4>
								<h4>Kiểu: @ViewBag.Vehicle.Type.TypeName</h4>
								<h4>Thương Hiệu: @ViewBag.Vehicle.Brand</h4>
								<h4>Màu: @ViewBag.Vehicle.Color</h4>
								<h4>Năm: @ViewBag.Vehicle.Year</h4>
								<h4>Đánh Giá: @ViewBag.Vehicle.DailyRate</h4>
								<h4>Mô tả: @ViewBag.Vehicle.Describe</h4>
								<h4>Giá: @ViewBag.Vehicle.Price$/day</h4>
							</td>
						</tr>
						<tr>
							<td>Start Date:</td>
							<td>
								<input type="datetime-local" name="stdate" id="startDate" required />
							</td>
						</tr>
						<tr>
							<td>End Date:</td>
							<td>
								<input type="datetime-local" name="edate" id="endDate" required />
							</td>
						</tr>
						
						<tr>
							<td></td>
							<td>
								<input type="submit" onclick="validateDates()" value="Booking" />
							</td>
						</tr>
					</table>
				</form>

			</div>

		</div>
	</div>
	
</section>
